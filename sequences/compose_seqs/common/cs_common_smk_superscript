# Skorpian Overscript Circumflex
<Multi_key> <dead_circumflex> <dead_circumflex> <asterisk> <space>                          : "âƒ°"   # * + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U035A> <minus> <minus>                     : "âƒ©"   # Ê­/2 + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U21BB> <asciicircum> <greater> <space>     : "âƒ•"   # â†· + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U21BB> <less> <asciicircum> <space>        : "âƒ”"   # â†¶ + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U21BB> <less> <asterisk> <plus> <space>    : "âƒ"   # â†¼ + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U21BB> <less> <minus> <greater> <space>    : "âƒ¡"   # â†” + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U21BB> <less> <minus> <space>              : "âƒ–"   # â† + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U21BB> <minus> <greater> <space>           : "âƒ—"   # â†’ + Superscript
<Multi_key> <dead_circumflex> <dead_circumflex> <U21BB> <plus> <asterisk> <greater> <space> : "âƒ‘"   # â‡€ + Superscript


# Skorpian Superscript Circumflex (IPA Sounds)
<Multi_key> <dead_circumflex> <U0298>                   : "ğµ"   # Ê˜ (Bilabial Click) + Superscript
<Multi_key> <dead_circumflex> <U035A> <0>               : "ğµ"
<Multi_key> <dead_circumflex> <U01C1>                   : "ğ·"   # Ç (Lateral Click) + Superscript
<Multi_key> <dead_circumflex> <U035A> <bar> <bar>       : "ğ·"
<Multi_key> <dead_circumflex> <U01C2>                   : "ğ¸"   # Ç‚ (Palatal Click) + Superscript
<Multi_key> <dead_circumflex> <U035A> <bar> <equal>     : "Ç‚"
<Multi_key> <dead_circumflex> <U035A> <equal> <bar>     : "Ç‚"
<Multi_key> <dead_circumflex> <U01C0>                   : "ğ¶"   # Ç€ (Dental Click) + Superscript
<Multi_key> <dead_circumflex> <U035A> <bar> <space>     : "ğ¶" 
<Multi_key> <dead_circumflex> <U01C3>                   : "êœ"   # Çƒ (Alveolar Click) + Superscript
<Multi_key> <dead_circumflex> <U035A> <exclam>          : "êœ"
<Multi_key> <dead_circumflex> <U1DF0A>                  : "ğ¹"   # ğ¼Š (Retroflex Click) + Superscript
<Multi_key> <dead_circumflex> <U0359> <greater> <!>     : "ğ¹"
<Multi_key> <dead_circumflex> <exclamdown>              : "êœ"


# Skorpian Superscript Circumflex (IPA Suprasegmentals)
<Multi_key> <dead_circumflex> <U02D0>           : "ğ"   # Ë + Superscript
<Multi_key> <dead_circumflex> <U035A> <colon>   : "ğ"
<Multi_key> <dead_circumflex> <U02D1>           : "ğ‚"   # Ë‘ + Superscript
<Multi_key> <dead_circumflex> <U035A> <period>  : "ğ‚"

